<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c24a62ecf.js" crossorigin="anonymous"></script>
    <title>ProjectBud</title>
  </head>

  <body>
    
    <nav class="navbar fixed-top navbar-expand-sm navbar-light bg-light">
        <div class="container">
            <div class="brand">
              <a class="navbar-brand mr-sm-4" href="/">ProjectBud</a>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse ml-auto" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                  <li class="nav-item ml-2">
                  <a class="nav-link" href="/">Home</a>
                  </li>
                  <li class="nav-item ml-2">
                      <a class="nav-link" href="/post/add">New</a>
                  </li>
                  <% if(!user) {%>
                
                    <li class="nav-item ml-2">
                        <a class="nav-link" href="/users/login">Login</a>
                    </li>
                    <li class="nav-item ml-2">
                        <a class="nav-link" href="/users/register">Register</a>
                    </li>
                    <% } else{ %>
                    <li class="nav-item ml-2">
                        <a class="nav-link" href="/users/login">My Projects</a>
                    </li>
                    
                    <li class="nav-item ml-2 mr-3">
                      <a class="nav-link" href="/users/login"><i class="fas fa-bell"></i></a>
                    </li>

                    <li class="nav-item dropdown">
                      <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-chevron-circle-down"></i></a>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="/users/<%= user.username %>/dashboard">Dashboard</a>
                        <a class="dropdown-item" href="#">Settings</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/users/logout">Logout</a>
                      </div>
                    </li>
                  <% } %>

              </ul>
            </div>
        </div>
    </nav>

      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12"> 
            <form action="" class="outsearch form-inline justify-content-center">
              <input class="mr-sm-1 " type="search" type="search" placeholder="What are you looking for?">
              <select name="proj_type" class="form-control mr-sm-1 ">
                <option value="Project">Project</option>
                <option value="Paper">Paper</option>
                <option value="Seminar">Seminar</option>
              </select>
              <button class="btn btn-light">Search</button>
            </form>
          </div>
        </div>
        <hr>
        <div class="page-content d-flex">
          
            <%- body %>

            

        </div>
      </div>

    

      <!-- Footer of the page -->
      <footer class="page-footer">
        <div class="container d-flex justify-content-center"></div>
          <div class="copyright display-5">This website is a copyright of ................. </div>
        </div>
      </footer>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>